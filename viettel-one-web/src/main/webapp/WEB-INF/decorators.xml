<?xml version="1.0" encoding="windows-1252"?>
<decorators defaultdir="/WEB-INF/views/layouts">
    <excludes>
        <pattern>/resources/*</pattern>
        <pattern>/oauth/token*</pattern>
        <pattern>/logout*</pattern>
        <pattern>/checkPassword*</pattern>
        
        <pattern>/login.jsp*</pattern>
        <pattern>/register.jsp*</pattern>
        <pattern>/lockscreen.jsp*</pattern>
        <pattern>*.htm*</pattern>
        <pattern>/burger.jsp*</pattern>
        <pattern>/chicken.jsp*</pattern>
    </excludes>
    <decorator name="default" page="application.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>